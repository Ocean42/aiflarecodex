{
  "name": "@aiflare/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "aiflare-backend": "dist/bin/start-backend.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run build:resources",
    "postbuild": "mkdir -p dist/resources && cp src/resources/codex-instructions.txt dist/resources/codex-instructions.txt",
    "dev": "node dist/bin/start-backend.js",
    "test:unit": "vitest run",
    "test:integration": "echo 'backend integration tests pending'",
    "build:resources": "rm -rf dist/resources && mkdir -p dist/resources && cp src/resources/codex-instructions.txt dist/resources/codex-instructions.txt"
  },
  "dependencies": {
    "@aiflare/protocol": "file:../protocol",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "file-type": "^20.1.0",
    "https-proxy-agent": "^7.0.6",
    "openai": "^4.95.1",
    "shell-quote": "^1.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/shell-quote": "^1.7.5",
    "@types/supertest": "^6.0.3",
    "supertest": "^6.3.4",
    "vitest": "^1.6.1"
  }
}
